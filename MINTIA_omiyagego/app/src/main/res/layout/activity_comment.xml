<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_back_to_former"
        android:src="@drawable/back_button"
        android:background="#00000000"
        android:layout_x = "50dp"
        android:layout_y = "50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_comment_updata"
        android:src="@drawable/ic_refresh"
        android:background="#00000000"



        />

    <android.support.v7.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_24dp"
        cardview:cardCornerRadius="@dimen/dimen_30dp"
        cardview:cardElevation="@dimen/dimen_10dp"
        cardview:cardUseCompatPadding="true"
        cardview:cardBackgroundColor="@color/primary_light"
        android:layout_below="@id/imageButton_back_to_former">


    <ListView
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/listView_comment_list"
        android:background="@color/primary_light"
        android:layout_above="@+id/imageButton_star1"
        android:layout_alignParentStart="true" />

    </android.support.v7.widget.CardView>>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_star1"
        android:src="@drawable/ic_star_pre"
        android:background="#00000000"
        android:layout_above="@+id/editText_comment"
        android:layout_alignStart="@+id/editText_comment" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_star2"
        android:src="@drawable/ic_star_pre"
        android:background="#00000000"
        android:layout_above="@+id/editText_comment"
        android:layout_toEndOf="@+id/imageButton_star1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_star3"
        android:src="@drawable/ic_star_pre"
        android:background="#00000000"
        android:layout_above="@+id/editText_comment"
        android:layout_toEndOf="@+id/imageButton_star2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_star4"
        android:src="@drawable/ic_star_pre"
        android:background="#00000000"
        android:layout_above="@+id/editText_comment"
        android:layout_toEndOf="@+id/imageButton_star3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_star5"
        android:src="@drawable/ic_star_pre"
        android:background="#00000000"
        android:layout_alignTop="@+id/imageButton_star4"
        android:layout_toEndOf="@+id/imageButton_star4" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:id="@+id/editText_comment"
        android:layout_marginLeft="90dp"
        android:background="#ffffffff"
        android:backgroundTintMode="src_over"
        android:layout_above="@+id/button_send_comment"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="コメント"
        android:id="@+id/button_send_comment"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>