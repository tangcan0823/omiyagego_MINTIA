<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00897b">

    <ListView
        android:layout_width="600dp"
        android:layout_height="550dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/listView_comment_list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:background="#c4e51d" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:id="@+id/editText_comment_input"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:background="#ffffffff"
        android:backgroundTintMode="src_over"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/listView_comment_list" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="コメントを送る"
        android:id="@+id/button_send_comment"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText_comment_input"/>

</LinearLayout>